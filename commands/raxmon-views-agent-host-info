from raxmon_cli.common import run_action

OPTIONS = [[['--agent-id'],
            {'dest': 'agentIds',
             'help': 'Agent IDs to operate on (specify option multiple times)',
             'action': 'append'}],
           [['--include'],
            {'dest': 'includes',
             'help': 'Host Info Types to view (specify option multiple times)',
             'action': 'append'}]]

REQUIRED_OPTIONS = ['agentIds', 'includes']

def callback(driver, options, args, callback):
    result = driver.ex_views_agent_host_info(agentIds=options.agentIds, includes=options.includes,
                                             ex_next_marker=options.marker)
    callback(result)

run_action(OPTIONS, REQUIRED_OPTIONS, 'views', 'overview', callback)
